{% extends 'base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block body %}
    <h1>Voiture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Model</th>
                <th>Prix</th>
                <th>Archive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.model }}</td>
                <td>{{ voiture.prix }}</td>
                <td>{{ voiture.archive ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_liste_voiture_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_liste_voiture_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_liste_voiture_new') }}">Create new</a>
{% endblock %}
